<UserControl x:Class="ResumeBuilderUI.UserControls.AffiliationHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ResumeBuilderUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="AffiliationHolderControl">
    <Border x:Name="AffiliationHolderBorder" Background="White">
        <Grid>
            <TextBlock Text="{Binding ElementName=AffiliationHolderControl, Path=AffiliationSource.Company}"/>
        </Grid>
    </Border>
</UserControl>

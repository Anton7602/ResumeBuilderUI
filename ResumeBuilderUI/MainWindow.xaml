<Window x:Class="ResumeBuilderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilderUI"
        mc:Ignorable="d"
        Title="Application Builder" Height="600" Width="900">
    <ScrollViewer>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                </MenuItem>
                <MenuItem Name="menuLanguage" Header="_Language">
                    <MenuItem Name="menuEnglish"  IsCheckable="True" IsChecked="True" Click="ChangeLanguageMenuButton_Click" Header="_English"/>
                    <MenuItem Name="menuRussian"  IsCheckable="True" Click="ChangeLanguageMenuButton_Click" Header="_Russian"/>
                </MenuItem>
            </Menu>
            <StackPanel Name="stckpnlMain" Margin="10">
                <Label Content="_Title:" Target="{Binding ElementName=txtTitle}" />
        <TextBox Name="txtTitle"/>
    </StackPanel>
    </DockPanel>
    </ScrollViewer>
</Window>

<Window x:Class="ResumeBuilderUI.SkillsetEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilderUI"
        mc:Ignorable="d"
        Title="SkillsetEditWindow" Height="420" Width="225">
    <StackPanel Name="stckpnlSkillsetEdit">
        <Label Name="lblSkillset" Content="Name of Skillset:" />
        <TextBox Name="txtSkillset" Margin="5"/>
        <Button Name="btnAddSkill" Content="Add New Skill" Margin="5" Click="btnAddSkill_Click"/>
        <ScrollViewer Height="250" Margin="10">
            <StackPanel Name="stckpnlSkills">
            </StackPanel>
        </ScrollViewer>
        <WrapPanel Name="wrpnlButtonsSkillset" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Name="btnCancel" Content="Cancel" Margin="0,0,5,0" Width="80" Click="btnCancel_Click"/>
            <Button Name="btnAccept" Content="Accept" Margin="5,0,0,0" Width="80" Click="btnAccept_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>

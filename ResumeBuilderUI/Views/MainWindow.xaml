<Window x:Class="ResumeBuilderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ResumeBuilderUI.ViewModels"
        mc:Ignorable="d"
        Title="Application Builder" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <ScrollViewer>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="{DynamicResource lang_Profile}">
                    <MenuItem Header="{DynamicResource lang_Profile_New}"/>
                    <MenuItem Header="{DynamicResource lang_Profile_Open}"/>
                    <MenuItem Header="{DynamicResource lang_Profile_Save}"/>
                </MenuItem>
                <MenuItem Name="menuLanguage" Header="{DynamicResource lang_Language}">
                    <MenuItem Name="menuEnglish"  IsCheckable="True" IsChecked="True" Header="{DynamicResource lang_Language_English}" Tag="en-US" Click="changeLanguageMenuItem_Click"/>
                    <MenuItem Name="menuRussian"  IsCheckable="True" Header="{DynamicResource lang_Language_Russian}" Tag="ru-RU" Click="changeLanguageMenuItem_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel Name="stckpnlMain" Margin="10">
                <Label Content="{DynamicResource lang_Name}"/>
                <TextBlock Text="{Binding ActiveProfile.Name, Mode=TwoWay}"
                           FontSize="20"/>
                <TextBox Text="{Binding ActiveProfile.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10" FontSize="15"/>
                <ListView ItemsSource="{Binding ActiveProfile.contactsList}"
                          Margin="10"/>
                <ListBox ItemsSource="{Binding ActiveProfile.employmentsList}"
                          Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                
                            </WrapPanel>
                        </DataTemplate>    
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
    </DockPanel>
    </ScrollViewer>
</Window>

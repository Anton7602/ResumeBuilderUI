<Window x:Class="ResumeBuilderUI.AffiliationEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilderUI"
        mc:Ignorable="d"
        Title="Edit Affiliation" Height="300" Width="300">
    <StackPanel Name="stckpnlAffiliationEdit">
        <Label Name="lblAffiliantCompany" Content="Company Name:"/>
        <TextBox Name="txtAffiliantCompany" Text=""/>
        <Label Name="lblAffiliation" Content="Affiliation"/>
        <TextBox Name="txtAffiliation" Text=""/>
        <Label Name="lblDateOfAffiliation" Content="Date of Affiliation"/>
        <DatePicker Name="dpckrDateOfAffiliation" SelectedDate="01.01.2000"/>
        <Button Name="btnAffiliationAccept" Content="Accept" Click="btnAffiliationAccept_Click" Width="100" Margin="0,100,0,0"/>
    </StackPanel>
</Window>
